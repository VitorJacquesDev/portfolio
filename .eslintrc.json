{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "globals": {
    "gtag": "readonly",
    "I18nManager": "readonly",
    "AnimationController": "readonly",
    "LazyLoader": "readonly",
    "ProjectModal": "readonly",
    "FormHandler": "readonly",
    "PerformanceMonitor": "readonly",
    "AnalyticsManager": "readonly",
    "projectsData": "readonly",
    "emailjs": "readonly",
    "i18nManager": "readonly"
  },
  "rules": {
    "no-inner-declarations": "off",
    "no-empty": "off",
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "no-console": "off"
  },
  "ignorePatterns": [
    "dist/"
  ]
}
